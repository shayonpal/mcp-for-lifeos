{
  "name": "lifeos-mcp",
  "version": "3.0.0",
  "description": "Model Context Protocol server for LifeOS Obsidian vault management",
  "packageManager": "npm@11.6.0",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/src/index.js",
    "watch": "tsx watch src/index.ts",
    "test": "node --expose-gc ./node_modules/.bin/jest",
    "test:integration": "node --expose-gc ./node_modules/.bin/jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:workflows": "jest tests/integration/workflows",
    "test:regression": "jest tests/integration/regression",
    "test:edge-cases": "jest tests/integration/edge-cases",
    "test:vault-config": "jest tests/integration/vault-configurations.test.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "check:circular": "madge --circular --extensions ts src/",
    "smoke:stdio": "node scripts/smoke-stdio.mjs",
    "docs:generate": "tsx scripts/generate-tool-docs.ts",
    "docs:watch": "tsx watch scripts/generate-tool-docs.ts"
  },
  "keywords": [
    "mcp",
    "obsidian",
    "lifeos",
    "knowledge-management",
    "pkm"
  ],
  "author": "Shayon Pal <https://agilecode.studio>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/shayonpal/mcp-for-lifeos.git"
  },
  "bugs": {
    "url": "https://github.com/shayonpal/mcp-for-lifeos/issues"
  },
  "homepage": "https://github.com/shayonpal/mcp-for-lifeos#readme",
  "dependencies": {
    "@date-fns/tz": "^1.2.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "date-fns": "^4.1.0",
    "fastify": "^5.3.3",
    "glob": "^10.3.0",
    "gray-matter": "^4.0.3",
    "node-fetch": "^3.3.2",
    "pino-pretty": "^13.0.0",
    "uuid": "^13.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.39.1",
    "jest": "^29.0.0",
    "madge": "^8.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
